                        async (tx) => {
                            
                            try {
                                await account.signTransaction(tx);
                            } catch(e) {
                                console.log('update error')
                                console.log(e);
                                console.log();
                            }
                            
                        }
                    );
                } catch (e) {
                    alert('Something went wrong! Invalid Tx!');
                    console.log(e);
                }
            }

            reDeposit = async function (amount) {
                console.log('try to redeposit ...');
                console.log('amount:', amount);

                let result = await channel.deposit(parseInt(amount), async (tx) => await account.signTransaction(tx));
                
